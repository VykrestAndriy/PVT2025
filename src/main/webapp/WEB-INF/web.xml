<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>QuoteServlet</servlet-name>
        <servlet-class>com.example.lab4.model.QuoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuoteServlet</servlet-name>
        <url-pattern>/quote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GuessingGameServlet</servlet-name>
        <servlet-class>com.example.lab4.model.GuessingGameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuessingGameServlet</servlet-name>
        <url-pattern>/guess-number</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CalculatorServlet</servlet-name>
        <servlet-class>com.example.lab4.model.CalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculatorServlet</servlet-name>
        <url-pattern>/calculate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManufacturerServlet</servlet-name>
        <servlet-class>com.example.lab4.model.ManufacturerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManufacturerServlet</servlet-name>
        <url-pattern>/manufacturer/info</url-pattern>
    </servlet-mapping>

</web-app>